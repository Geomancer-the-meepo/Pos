<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backback"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragments.HtoemalFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/etbackback"
            android:ems="10"
            android:hint="အမည်"
            android:inputType="textPersonName"
            android:padding="5sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/etbackback"
            android:ems="10"
            android:hint="ထိုးမည့် နံပါတ်"
            android:inputType="number"
            android:padding="5sp"
            app:layout_constraintEnd_toEndOf="@+id/et_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_name"
            app:layout_constraintTop_toBottomOf="@+id/et_name" />

        <EditText
            android:id="@+id/et_amount"
            style="@style/formDropDown"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/etbackback"
            android:ems="10"
            android:hint="ထိုးမည့်ငွေ ပမာဏ"
            android:inputType="number"
            android:padding="5sp"
            app:layout_constraintEnd_toEndOf="@+id/et_number"
            app:layout_constraintStart_toStartOf="@+id/et_number"
            app:layout_constraintTop_toBottomOf="@+id/et_number" />

        <Button
            android:id="@+id/btHtoe"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorAccent"
            android:text="ထည့်သွင်းရန်"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="27dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/et_amount"
            app:layout_constraintStart_toStartOf="@+id/et_amount"
            app:layout_constraintTop_toBottomOf="@+id/et_amount" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>